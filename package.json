{
  "name": "commute-time-collector",
  "version": "0.0.1",
  "description": "A service that collects time to get from point A to point B via Yandex maps",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dev": "NODE_ENV=dev ts-node src/index.ts",
    "tsc": "tsc",
    "lint": "eslint --ext .tsx --ext .ts --format codeframe './'",
    "lint:fix": "eslint --debug --fix"
  },
  "author": "Yury Baykov",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:OkciD/commute-time-collector.git"
  },
  "private": true,
  "dependencies": {
    "@types/flat": "5.0.1",
    "@types/minimist": "1.2.0",
    "@types/node": "12.12.28",
    "@types/node-cron": "2.0.3",
    "@types/request": "2.48.5",
    "csv-stringify": "5.5.1",
    "fecha": "*",
    "flat": "5.0.2",
    "minimist": "1.2.6",
    "node-cron": "2.0.3",
    "request": "*",
    "tor-request": "3.1.0",
    "tough-cookie": "*",
    "ts-node": "9.0.0",
    "type-fest": "0.16.0",
    "typescript": "4.0.2",
    "webdriver": "*",
    "webdriverio": "6.4.0",
    "winston": "3.3.3",
    "winston-daily-rotate-file": "4.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-plugin-import": "2.22.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
