{
  "name": "commute-time-collector",
  "version": "0.0.1",
  "description": "A service that collects time to get from point A to point B via Yandex maps",
  "scripts": {
    "start": "NODE_ENV=dev ts-node ./index.ts",
    "start:prod": "NODE_ENV=prod ts-node ./index.ts",
    "tsc": "tsc",
    "lint": "eslint --ext .tsx --ext .ts --format codeframe './'",
    "lint:fix": "eslint --debug --fix"
  },
  "author": "Yury Baykov",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:OkciD/commute-time-collector.git"
  },
  "private": true,
  "dependencies": {
    "@types/cheerio": "0.22.16",
    "@types/flat": "5.0.0",
    "@types/minimist": "1.2.0",
    "@types/node": "12.12.28",
    "@types/node-cron": "2.0.3",
    "@types/request": "2.48.4",
    "@types/tcp-port-used": "1.0.0",
    "chalk": "*",
    "cheerio": "1.0.0-rc.3",
    "csv-stringify": "5.3.6",
    "fecha": "*",
    "flat": "5.0.0",
    "minimist": "1.2.0",
    "node-cron": "2.0.3",
    "request": "*",
    "tcp-port-used": "1.0.1",
    "tor-request": "3.1.0",
    "tough-cookie": "*",
    "ts-node": "8.6.2",
    "type-fest": "0.11.0",
    "typescript": "3.8.3",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.22.0",
    "@typescript-eslint/parser": "2.22.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "6.3.2",
    "eslint-plugin-import": "2.20.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
